@model RecruitCatShigavkp.Pages.Companys.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.companyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.companyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.min_salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.min_salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.max_salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.max_salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.start_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.start_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.companyRank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.companyRank)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.industryId)
        </dd>
    </dl>
</div>

@if (Model.Company.Candidates.Any())
{
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].candidateFname)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].candidateLname)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].targetSalary)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].startDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].emailId)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].mobileNumber)</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Company.Candidates)

                {

                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.candidateFname)</td>
                        <td>@Html.DisplayFor(modelItem => item.candidateLname)</td>
                        <td>@Html.DisplayFor(modelItem => item.targetSalary)</td>
                        <td>@Html.DisplayFor(modelItem => item.startDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.emailId)</td>
                        <td>@Html.DisplayFor(modelItem => item.mobileNumber)</td>

                        <td>
                            <a asp-page="/Companys/Details" asp-route-id="@item.companyId">Details</a>
                        </td>
                    </tr>
                }

               @* <tr>
                    <th></th>
                    <th>Total</th>
                    <th>@Model.Company.Candidates.Sum(x => x.CurrentBalance).ToString("C2")</th>
                    <th></th>

                </tr>*@



            </tbody>
        </table>



    </div>
}

else
{
    <div class="alert alert-warning">No candidates exist</div>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company?.companyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
